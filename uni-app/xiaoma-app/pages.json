{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"topWindow": true,// 当前页面不显示 topWindow
				"navigationBarTitleText": "小马",
				"app-plus":{
					"titleNView":true
				}
			}
		},
		{
			"path": "pages/myself/index",
			"style": {
				"topWindow": false,// 当前页面不显示 topWindow
				"navigationBarTitleText": "我的",
				"app-plus":{
					"titleNView":true
				}
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "小马知途",
		"navigationBarBackgroundColor": "#ededed",
		"backgroundColor": "#ededed",
		"app-plus":{
			"popGesture":"close",
			"pullToRefresh":{
				"support":false
			}	
		}
	},
	"tabBar":{
		"color": "#555555",
		"selectedColor": "#02c452",
		"borderStyle": "#d1d1d1",
		"backgroundColor": "#f7f7f7",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/img/home.png",
			"selectedIconPath": "static/img/home_active.png",
			"text": "首页"
		},{
			"pagePath": "pages/myself/index",
			"iconPath": "static/img/user.png",
			"selectedIconPath": "static/img/user_active.png",
			"text": "我的"
		}]
	}
}
